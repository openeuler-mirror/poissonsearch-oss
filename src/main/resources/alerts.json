{
  "template": ".alerts",
  "order": 0,
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "alerts.template_version": 1
  },
  "mappings": {
    "alert": {
      "dynamic" : "strict",
      "properties": {
        "schedule": {
          "type": "string"
        },
        "last_fire_time": {
          "type": "date"
        },
        "last_action_fire": {
          "type": "date"
        },
        "last_action_executed": {
          "type": "date"
        },
        "throttle_period": {
          "type": "string"
        },
	"ack_state" : {
          "type": "string"
	},
        "trigger": {
          "type": "object",
          "enabled" : false,
          "dynamic" : true
        },
        "actions": {
          "type" : "object",
          "enabled" : false,
          "dynamic" : true
        },
        "request": {
          "type" : "object",
          "enabled" : false,
          "dynamic" : true
        }
      }
    }
  }
}
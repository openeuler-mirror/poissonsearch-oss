{
    "person" : {
        "dynamic_templates" : [
            {
                "match" : "multi*",
                "mapping" : {
                    "type" : "multi_field",
                    "fields" : {
                        "{name}" : {"type": "string", "index" : "analyzed", "store" : "yes"},
                        "org" : {"type": "string", "index" : "not_analyzed", "store" : "yes"}
                    }
                }
            },
            {
                "match" : "*",
                "match_mapping_type" : "string",
                "mapping" : {
                    "type" : "string",
                    "index" : "not_analyzed"
                }
            }
        ]
    }
}
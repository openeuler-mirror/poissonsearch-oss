{
  "template": ".monitoring-data-${monitoring.template.version}",
  "settings": {
    "index.number_of_shards": 1,
    "index.number_of_replicas": 1,
    "index.codec": "best_compression",
    "index.mapper.dynamic": false
  },
  "mappings": {
    "cluster_info": {
      "enabled": false,
      "_meta": {
        "xpack.version": "${project.version}"
      }
    },
    "kibana": {
      "enabled": false
    },
    "node": {
      "enabled": false
    }
  }
}
